<!--index.wxml-->
<view>
  <view class="index">
    <view>
      {{result}}
    </view>
    <view class="qipan">
      <view class="qipan-in">
        <view class="block" wx:for="{{vak}}" wx:key="{{index}}" bindtap="step" data-pos="{{index}}">
          <view class="{{item}}"></view>
        </view>
      </view>
    </view>
    <view class="restart-container">
      <button type="primary" bindtap="restart">重新开始</button>
    </view>
  </view>
</view>